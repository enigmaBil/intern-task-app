# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=votre-secret-jwt-tres-securise-a-changer

# ===========================
# KEYCLOAK CONFIGURATION
# ===========================

# URL publique Keycloak (accessible depuis le navigateur)
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8080
NEXT_PUBLIC_KEYCLOAK_REALM=Mini-Jira-Realm
NEXT_PUBLIC_CLIENT_ID=mini-jira-frontend

# URL interne Keycloak (accessible depuis les conteneurs Docker)
KEYCLOAK_ISSUER=http://keycloak:8080/realms/Mini-Jira-Realm

# Credentials client Keycloak
FRONTEND_CLIENT_ID=mini-jira-frontend
FRONTEND_CLIENT_SECRET=votre-client-secret-keycloak

# ===========================
# BACKEND API CONFIGURATION
# ===========================

# URL publique du backend (accessible depuis le navigateur)
